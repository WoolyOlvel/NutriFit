<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handler"
            type="com.ascrib.nutrifit.ui.form.RegisterFragment" />
    </data>

    <RelativeLayout
        android:id="@+id/layout_bienvenida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_background">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_button"
            android:background="@drawable/button_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/layout_form"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:contentDescription="TODO"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/inner_spacing"
                    android:text="@string/registerText"
                    android:textColor="@color/colorVariant"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_40sdp"
                    android:layout_marginVertical="@dimen/section_spacing"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_spacing"
                        android:text="@string/FieldRegisterText"
                        android:textColor="@color/colorVariant"
                        android:textSize="@dimen/text_size_h5"/>

                    <EditText
                        android:id="@+id/nombreEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/inner_spacing"
                        android:background="@drawable/background_radius"
                        android:backgroundTint="@color/white"
                        android:inputType="text"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor"
                        android:paddingHorizontal="@dimen/section_spacing"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/text_size_h5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/inner_spacing"
                        android:text="@string/FieldRegisterText2"
                        android:textColor="@color/colorVariant"
                        android:textSize="@dimen/text_size_h5"/>

                    <EditText
                        android:id="@+id/apellidosEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/inner_spacing"
                        android:background="@drawable/background_radius"
                        android:backgroundTint="@color/white"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="@dimen/section_spacing"
                        android:textColorHint="@color/grey"
                        android:importantForAutofill="yes"
                        tools:ignore="LabelFor"
                        android:textSize="@dimen/text_size_h5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_spacing"
                        android:text="@string/FieldUsuarioText3"
                        android:textColor="@color/colorVariant"
                        android:textSize="@dimen/text_size_h5" />

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/inner_spacing"
                        android:background="@drawable/background_radius"
                        android:backgroundTint="@color/white"
                        android:inputType="text"
                        android:paddingHorizontal="@dimen/section_spacing"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/text_size_h5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_spacing"
                        android:text="@string/FieldTelefonoText4"
                        android:textColor="@color/colorVariant"
                        android:textSize="@dimen/text_size_h5" />

                    <EditText
                        android:id="@+id/usuarioEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/inner_spacing"
                        android:background="@drawable/background_radius"
                        android:backgroundTint="@color/white"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor"
                        android:paddingHorizontal="@dimen/section_spacing"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/text_size_h5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/inner_spacing"
                        android:text="@string/FieldContraseÃ±aText5"
                        android:textColor="@color/colorVariant"
                        android:textSize="@dimen/text_size_h5" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/background_radius"
                        android:backgroundTint="@color/white"
                        android:inputType="textPassword"
                        android:paddingHorizontal="@dimen/section_spacing"
                        android:textColorHint="@color/grey"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor"
                        android:textSize="@dimen/text_size_h5" />




                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginVertical="@dimen/section_spacing"
                        android:elevation="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:onClick="@{()->handler.onRegisterClicked()}"
                        android:text="@string/ButtonRegisterField"
                        android:textAllCaps="false"
                        app:cornerRadius="@dimen/inner_spacing"
                        app:elevation="0dp"
                        app:backgroundTint="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/inner_spacing"
                        android:text="@string/alternativa"
                        android:textColor="@color/colorVariant"
                        android:textSize="@dimen/text_size_h5"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/inner_spacing"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/googleButton"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@color/white"
                            android:contentDescription="TODO"
                            android:src="@drawable/googlelogo"/>

                        <ImageView
                            android:id="@+id/facebookButton"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginStart="@dimen/inner_spacing"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/facebooklogo" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_dark_arrow" />

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/section_spacing"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/tieneCuenta"
                android:textColor="@color/whiteGrey"
                android:textSize="@dimen/text_size_h5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/section_spacing"
                android:gravity="center"
                android:text="@string/regresarLogin"
                android:onClick="@{()->handler.onLoginClicked()}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h5"
                android:textStyle="bold" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:alpha=".2"
            android:scaleType="fitXY"
            android:contentDescription="@string/todo"
            android:src="@drawable/bottom_background" />

    </RelativeLayout>

</layout>