<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.ascrib.nutrifit.ui.dashboard.adapter.AppointmentAdapter" />

        <variable
            name="appointment"
            type="com.ascrib.nutrifit.model.Appointment" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inner_spacing"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->handler.onAppointmentClicked(appointment)}"
            android:orientation="horizontal"
            android:padding="@dimen/section_spacing">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    imageLoad="@{appointment.image}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/inner_spacing"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/inner_spacing">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@{appointment.type}"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_h6" />

                    <TextView
                        android:id="@+id/text_status_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@{appointment.status}"
                        android:textColor="@color/colorSecondary"
                        android:textSize="@dimen/text_size_h6"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="@{appointment.name}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_h5"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{appointment.time}"
                    android:textColor="@color/colorVariant"
                    android:textSize="@dimen/text_size_h6" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>