<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/section_spacing"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/section_spacing">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/inner_spacing"
                android:gravity="center_vertical"
                android:text="PrÃ³xima cita"
                android:textColor="@color/colorVariant"
                android:textSize="@dimen/text_size_h5"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/calendar3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/section_spacing"
                android:background="@color/lightGrey" />

            <TextView
                android:id="@+id/fechaConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorVariant"
                android:lineSpacingExtra="5dp"
                android:hyphenationFrequency="normal"
                android:textAlignment="center"
                android:justificationMode="inter_word"
                android:textSize="@dimen/text_size_h5"
                android:textStyle="bold"
                tools:text="Viernes, 29 de marzo del 2025\na las 11:11 am" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/section_spacing"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/nutriologoImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/inner_spacing"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_background"
                    android:clipToOutline="true"
                    tools:src="@drawable/userdummy" />

                <TextView
                    android:id="@+id/nutriologoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorVariant"
                    android:textSize="@dimen/text_size_h5"
                    tools:text="Con el Nut. Regina Caceres Estrada" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>