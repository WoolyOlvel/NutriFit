<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.ascrib.nutrifit.ui.patient.AppointmentDetailFragment" />
    </data>

    <RelativeLayout
        android:id="@+id/layout_patient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_button"
            android:background="@drawable/bottom_background_radius"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_dark_arrow" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/section_spacing"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->handler.onProfileClicked()}"
                            android:padding="@dimen/section_spacing">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_image"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/todo"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/perfil_nutri" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@id/layout_info"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/card_image"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingHorizontal="@dimen/section_spacing">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/name_nut"
                                    android:textColor="@color/colorVariant"
                                    android:textSize="@dimen/text_size_h5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/inner_spacing"
                                    android:text="@string/male"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_h6" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/inner_spacing"
                                    android:drawablePadding="@dimen/inner_spacing"
                                    android:gravity="center_vertical"
                                    android:text="@string/birthday"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_h6"
                                    app:drawableLeftCompat="@drawable/ic_cake"
                                    app:drawableTint="@color/grey" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/inner_spacing"
                                    android:drawablePadding="@dimen/inner_spacing"
                                    android:gravity="center_vertical"
                                    android:text="@string/ubication"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_h6"
                                    app:drawableLeftCompat="@drawable/ic_location"
                                    app:drawableTint="@color/grey" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/card_image"
                                android:layout_marginTop="@dimen/section_spacing"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".25"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/height"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_h6"
                                        tools:ignore="TooDeepLayout" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/num_height"
                                        android:textColor="@color/colorVariant"
                                        android:textSize="@dimen/text_size_h5"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".25"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/weight"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_h6" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/_72kg"
                                        android:textColor="@color/colorVariant"
                                        android:textSize="@dimen/text_size_h5"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".25"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/bmi"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_h6" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/_20_33"
                                        android:textColor="@color/colorVariant"
                                        android:textSize="@dimen/text_size_h5"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".25"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/blood_type"
                                        android:textColor="@color/grey"
                                        android:textSize="@dimen/text_size_h6" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/b"
                                        android:textColor="@color/colorVariant"
                                        android:textSize="@dimen/text_size_h5"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_consult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/section_spacing"
                        android:backgroundTint="@color/white"
                        android:visibility="gone"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/section_spacing">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/inner_spacing"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:paddingTop="@dimen/inner_spacing"
                                android:text="@string/consult"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5"
                                android:textStyle="bold"
                                app:drawableLeftCompat="@drawable/ic_doctor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/section_spacing"
                                android:background="@color/lightGrey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_call"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/inner_spacing"
                                    android:layout_toStartOf="@id/button_chat"
                                    android:backgroundTint="@color/colorSecondary"
                                    android:onClick="@{()->handler.onCallClicked()}"
                                    android:text="@string/consult_now"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/text_size_h6"
                                    app:icon="@drawable/ic_call"
                                    app:iconGravity="textStart" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_chat"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:gravity="center"
                                    android:onClick="@{()->handler.onChatClicked()}"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/text_size_h6"
                                    app:icon="@drawable/ic_chat"
                                    app:iconGravity="textStart"
                                    app:iconPadding="0dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/section_spacing"
                        android:backgroundTint="@color/white"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/section_spacing">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/inner_spacing"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:paddingTop="@dimen/inner_spacing"
                                android:text="@string/visiting_time"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5"
                                android:textStyle="bold"
                                app:drawableLeftCompat="@drawable/ic_calendar" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/section_spacing"
                                android:background="@color/lightGrey" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/guardarCambios"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h6" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/inner_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/guardarCambios"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/section_spacing"
                        android:backgroundTint="@color/white"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/section_spacing">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/inner_spacing"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:paddingTop="@dimen/inner_spacing"
                                android:text="@string/consulting_details"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5"
                                android:textStyle="bold"
                                app:drawableLeftCompat="@drawable/ic_question" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/section_spacing"
                                android:background="@color/lightGrey" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/for_her_son_3_years_old"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h6"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/inner_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/description"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_h6" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/section_spacing"
                                    android:layout_weight=".5"
                                    android:gravity="start"
                                    android:paddingHorizontal="@dimen/section_spacing"
                                    android:text="@string/uploaded_may_12_2022"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_h6" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/section_spacing"
                                    android:layout_weight=".5"
                                    android:gravity="end"
                                    android:onClick="@{()->handler.onAnswerClicked()}"
                                    android:paddingHorizontal="@dimen/section_spacing"
                                    android:text="@string/write_an_answer"
                                    android:textColor="@color/colorVariant"
                                    android:textSize="@dimen/text_size_h6" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/section_spacing"
                                android:background="@color/white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/my_answer"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/inner_spacing"
                                android:gravity="start"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/answered_01_25_pm_may_12_2022"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_h6" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/section_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/pres_details"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_h6" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/section_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/prescription"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h6"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/section_spacing"
                                android:background="@drawable/background_radius"
                                android:backgroundTint="@color/whiteGrey"
                                android:padding="@dimen/section_spacing"
                                android:text="@string/pres_details"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_h6" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/section_spacing"
                        android:backgroundTint="@color/white"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/section_spacing">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/inner_spacing"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:paddingTop="@dimen/inner_spacing"
                                android:text="@string/additional_information"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5"
                                android:textStyle="bold"
                                app:drawableLeftCompat="@drawable/ic_information" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/section_spacing"
                                android:background="@color/lightGrey" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/diagonased_condition"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h6"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/inner_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/none"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/section_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/medication"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h6"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/inner_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/none"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/section_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/allergies"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h6"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/inner_spacing"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:text="@string/none"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/section_spacing"
                        android:backgroundTint="#f3f3f3"
                        android:visibility="gone"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/section_spacing">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/inner_spacing"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="@dimen/section_spacing"
                                android:paddingTop="@dimen/inner_spacing"
                                android:text="@string/review"
                                android:textColor="@color/colorVariant"
                                android:textSize="@dimen/text_size_h5"
                                android:textStyle="bold"
                                app:drawableLeftCompat="@drawable/ic_review" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="@dimen/section_spacing"
                                android:background="@color/white" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:isIndicator="true"
                                android:progressTint="@color/orange"
                                android:rating="5"
                                android:stepSize="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/section_spacing"
                                android:background="@drawable/background_radius"
                                android:backgroundTint="@color/whiteGrey"
                                android:padding="@dimen/section_spacing"
                                android:text="@string/comentary"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text_size_h5" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/section_spacing"
                        android:text="@string/cancel_appointment"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_h6"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_completed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/section_spacing"
                        android:text="@string/are_you_done_finish_consult_now"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_h6"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layout_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/section_spacing"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/inner_spacing"
                            android:layout_weight=".5"
                            android:backgroundTint="@color/colorPrimary"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/accept"
                            android:textAllCaps="false"
                            app:cornerRadius="@dimen/_5sdp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/inner_spacing"
                            android:layout_weight=".5"
                            android:backgroundTint="@color/colorPrimary"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/reject"
                            android:textAllCaps="false"
                            app:cornerRadius="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/section_spacing"
            android:orientation="horizontal"
            tools:ignore="TooManyViews">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/respect_patients_detail_and_privacy_following_the_protocols"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h6" />
        </LinearLayout>

    </RelativeLayout>

</layout>